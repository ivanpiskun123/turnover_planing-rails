<div class="ui grid">



  <div class="one wide column">
  </div>

  <div class="fourteen wide column">
        <div class="ui  inverted segment" style="background-color: #D9D5DE">

        <br>

        <div class="ui two column centered grid">
          <h2 class=" ui center aligned header " style="  color: #3E3C6B; font-size: 185%">
            <i class="chart bar icon"></i>
            <div class="content">
              Динамика товарооборота в сопоставимых ценах (<%= @current_year %>)
            </div>
          </h2>
          </div>
              <br>
      <br>
          <br>

          <div class="ui grid">

            <div class="eight wide column"  ">
              <br >
              <%= bar_chart @data, { ytitle: "Продажи", download: {background: "#ffffff", filename: "Продажи по сезонам (#{@current_year})"}} %>
              </div>

              <div class="eight wide column"  ">


                    <table class="ui compact celled definition table">
              <thead>
                    <tr>
                    <th class=" center aligned">№</th>
                    <th class=" center aligned"><i class="calendar alternate outline icon"></i>Квартал</th>
                    <th class=" center aligned"><i class="money bill alternate icon"></i>Продано</th>
                    </tr>
              </thead>
              <tbody>

              <% @data.each_with_index do |d, idx| %>

                    <tr>

                    <td class="center aligned" style="vertical-align: middle">
                      <%= idx+1 %>
                    </td>
                    <td class="center aligned" style="vertical-align: middle">
                        <%= d[0] %>
                    </td>
                    <td class="center aligned" style="vertical-align: middle">
                        <%= d[1] %>
                    </td>
                </tr>
              <% end %>

              </tbody>

              </table>

                </div>

            </div>

              <br>
              <br>
              <br>



  </div>



    </div>


      </div>
