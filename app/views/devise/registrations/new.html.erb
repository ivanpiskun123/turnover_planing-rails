<div class="ui centered  relaxed grid">

    <div class="one wide column"></div>


    <div class="ui sixteen wide column secondary segment stacked">
    <h2 class="ui center aligned dividing header">
      <i class="icons">
        <i class="user icon"></i>
        <i class="corner add icon"></i>
      </i>
      Регистрация
    </h2>

      <div class="ui form <%= "error" if resource.errors.any? %>">

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <div class="ui error message">

            <%= devise_error_messages! %>
          </div>


          <div class="field ">
            <%= f.label :email %>
            <%= f.email_field :email, autofocus: true ,placeholder: "Электронный адрес"%>
          </div>

          <div class="field ">
            <%= f.label :name, "Имя" %>
            <%= f.text_field :name, autofocus: true ,placeholder: "Имя пользователя"%>
          </div>

          <div class="field ">
            <%= f.label :password, "Пароль" %>

              <% if @minimum_password_length %>
              <div class="ui pointing below label">
                  <%= @minimum_password_length %> символов минимум
              </div>
              <% end %>

                <%= f.password_field :password, autocomplete: "off" ,placeholder: "Введите пароль" ,data: {toggle: "tooltip", placement: "left" }%>
          </div>

          <div class="field">
            <%= f.label :password_confirmation, "Подтверждение пароля" %>
            <%= f.password_field :password_confirmation, autocomplete: "off" ,placeholder: "Повторите пароль" %>
          </div>

          <div class="ui center aligned header">
              <div class="ui  icon input">
                <%= f.submit "Зарегистрироваться        " ,class: "ui submit violet button " %>
                <i class="users icon"></i>
              </div>
            </div>

        <% end %>

      <div class="ui horizontal divider">или</div>
        <div class="ui celled horizontal list">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>

  <div class="one wide column"></div>

  </div>
